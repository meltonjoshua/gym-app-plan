# Production Environment Variables
# Copy this to .env and fill in your actual values

# Application
NODE_ENV=production
PORT=5000
LOG_LEVEL=info
LOG_FORMAT=json

# Database
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongodb_password_here
MONGODB_URI=mongodb://admin:your_secure_mongodb_password_here@mongodb:27017/fittracker-pro?authSource=admin&maxPoolSize=10&minPoolSize=5

# Cache
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

# Authentication
JWT_SECRET=your_very_long_and_secure_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_very_long_refresh_token_secret_here

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# Payment (Stripe)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# File Upload (Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# AI Integration
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
CORS_ORIGIN=https://fittracker.app,https://www.fittracker.app

# Monitoring
GRAFANA_PASSWORD=your_secure_grafana_password

# SSL (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9100

# Health Check URLs
HEALTH_CHECK_URL=http://localhost:5000/health
MONGODB_HEALTH_CHECK=true
REDIS_HEALTH_CHECK=true
